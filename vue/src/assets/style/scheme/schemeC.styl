mcarlo-button()
  border 5px solid gray
  border-radius 4px
  background gray
  color #fff

mcarlo-table()
  tableTitleHeight=36px
  tableBodyHeight=36px
  background #fff
  .table-title, .table-body
    list-style none
    padding 0
    margin 0

  // 表格头部
  .table-title
    display flex
    font-size 14px
    align-items center
    height tableTitleHeight
    border-bottom 1px solid #D1D4E6
    .table-title-item
      flex 1
      width 0
      height 100%
      padding-left 4px
      margin-left 4px
      border-left 1px solid #dcdcdc
      text-align left
      color #000
      display flex
      align-items center
      .triangle
        font-size 8px
        color #777
        margin-left 2px
        transition transform 0.3s linear
        &.sortS
          transform rotateZ(90deg)
        &.sortI
          transform rotateZ(-90deg)
    .operate
      flex 1
      height 100%
      text-align center
      line-height tableTitleHeight
      border-left 1px solid #dcdcdc

  // 表格内容
  .table-body
    max-height 400px
    overflow-y auto
    $scroll(10px, #000, #000, #fff)
  .table-body li
    height tableBodyHeight
    display flex
    font-size 12px
    align-items center
    &:nth-child(even)
      background #f1f2f8
    &:hover
      transition background 0.3s linear
      background #EAEAED
    .table-body-item
      flex 1
      width 0
      height 100%
      display flex
      align-items center
      padding-left 8px
      .item-content
        max-width 100%
        overflow hidden
        white-space nowrap
        text-overflow ellipsis
    .operate
      flex 1
      text-align center
      .iconfont
        cursor pointer
        font-size 20px
        display inline-block
        transition transform 0.3s ease
        &:hover
          transform rotateZ(45deg)

  // 选择框
  .checkbox-box
    flex 0 0 60px
    text-align center
    .checkbox
      font-size 16px
      cursor pointer
      color transparent
      border 1px solid #D8D7E5
      &.slcted
        border 1px solid #ff5f3d
        color #fff
        background #ff5f3d
      &:hover
        border 1px solid #ff5f3d
        transition border 0.3s linear

  // 操作菜单
  .operation-menu
    padding 0
    margin 0
    list-style none
    background #fff
    border-radius 4px
    overflow hidden
    box-shadow 0 6px 20px 0 rgba(59,46,47,.4)
    position fixed
    z-index 1
    transition left 0.3s ease, top 0.3s ease
    li
      display flex
      align-items center
      font-size 12px
      cursor pointer
      user-select none
      padding 10px 20px
      &:hover
        background #ff5f3d
        color #fff
      &:active
        background #FF5531
        color #fff

  // 表格遮罩
  // .shadow
  //   position fixed
  //   left 0
  //   right 0
  //   top 0
  //   bottom 0
  //   background transparent

  // 提示框
  .tip-box
    position fixed
    background rgba(0, 0, 0, 0.7)
    color #fff
    font-size 14px
    border-radius 2px
    padding 10px 20px
    pointer-events none
    transition left 0.3s ease, top 0.3s ease
